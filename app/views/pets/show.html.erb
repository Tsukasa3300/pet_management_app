<div class="container">

  <div class="my-pet">
    <div class="pet-record">
    <%= turbo_frame_tag "new_pet" do %>
      <%= link_to 'new' , new_pet_status_path(@pet.id) %>
    <% end %>  
    </div>

    <div class="pet-status">
      <h2>~健康状態~</h2>
      <% @statuses.each do |status| %>
        <div class="pet-status-detail">
          <h3>記録時間: <%= status.created_at.strftime("%Y/%m/%d %H:%M")%></h3>
          <h4>食事量: <%= status.food %>g</h3>
          <h4>体温: <%= status.temperature %>度</h3>
          <h4>体温: <%= status.weight %>kg</h3>
          <h5><%= link_to "訂正", edit_pet_status_path(status.pet, status), :style=>"color:black;" %></li>
        </div>      
      <% end %>
    </div>

  </div>
</div>

