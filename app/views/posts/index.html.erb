<div class="container">
<div class="my-pet">

<div class="pet-form">
  <h2>~記録する~</h2>
  <%= form_with(model: @post, local: true) do |f| %>
    <div class="field">
      <%= f.text_area :content, placeholder: "投稿内容" %>
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png"%>
    </div>
    <%= f.submit "投稿"%>
  <% end %>
</div>

<div class="pet-detail">
<h2>~記録~</h2>
  <% @posts.each do |post|%>
  <h3>記録時間: <%= time_ago_in_words(post.created_at)%> ago</h3>
  <div class="img">
  <%= image_tag post.image, size: "140x140"  if post.image.attached? %>
  </div>
  <h3><%= post.content %></h3>

  <% if current_user.like?(post) %>
  <p class="like">❤</p>
<% else %>
  <%=form_with(model:current_user.likes.build ) do |f| %>
    <%=f.hidden_field :user_id,value: current_user.id %>
    <%=f.hidden_field :post_id,value: post.id %>
    <%=f.submit "❤",class: "btn btn-primary"  %>
  <% end %>
<% end %>

  <div class="btn">
  <% if current_user?(post.user) %>
    <%= link_to "(投稿を削除)", post, data: { "turbo-method": :delete,turbo_confirm: "削除してもよろしいですか？" } %>
  <% end %>
  </div>
  ----------------------
  <% end %>
</div>

</div>
</div>
</div>
