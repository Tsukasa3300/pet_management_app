<div class="container">
  <div class="user-form">
    <h2>~ログイン~</h1>
    <div>
      <%= form_with(url: login_path, scope: :session) do |f| %>
        <div class="form">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form">  
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>