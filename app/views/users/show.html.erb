<% if current_user?(@user) %>
  <h2>~新規ペット~</h2>
  <%= form_with(model: @pet, local: true) do |f| %>
    <div class="field">
      <%= f.text_area :name, placeholder: "名前" %>
      <%= f.select :sex, [["オス","オス"],["メス","メス"]], include_blank:"性別" %>
      <%= f.select :old, [["o","0"],["1","1"],["2","2"],["3","3"],["3","3"],["4","4"],["5","5"],["6","6"],["7","7"],["8","8"],["9","9"],["10","10"],["11","11"],["12","12"],["13","13"],["14","14"],["15","15"]], include_blank:"年齢" %>
    </div>
    <%= f.submit "追加する"%>
  <% end %>
<% end %>

<h2>~ペット~</h2>
<% @pets.each do |pet| %>
  <h3>ペット<%= link_to pet.id, pet %>
  <h4>名前：<%= pet.name %></p>
  <h4>性別：<%= pet.sex %></p>
  <h4>年齢<%= pet.old %></p>
  <li><%= link_to "訂正", edit_pet_path(current_user) %></li>
  --------------------
<% end %>
